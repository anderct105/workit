<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="ehu.das.workit.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_menuFragment"
            app:destination="@id/menuFragment"
            app:enterAnim="@anim/fragment_fade_enter" />
    </fragment>
    <fragment
        android:id="@+id/menuFragment"
        android:name="ehu.das.workit.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/action_menuFragment_to_addElementoFragment"
            app:destination="@id/addElementoFragment" />
    </fragment>
    <dialog
        android:id="@+id/añadirDialog"
        android:name="ehu.das.workit.AñadirDialog"
        android:label="AñadirDialog" />
    <fragment
        android:id="@+id/addElementoFragment"
        android:name="ehu.das.workit.AddElementoFragment"
        android:label="fragment_add_elemento"
        tools:layout="@layout/fragment_add_elemento" >
        <action
            android:id="@+id/action_addElementoFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
    </fragment>
</navigation>